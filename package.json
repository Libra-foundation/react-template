{
  "name": "my-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "vite -c config/vite.config.ts --mode development",
    "build_preprod": "tsc && vite -c config/vite.config.ts build --mode preproduction",
    "build_prod": "tsc && vite -c config/vite.config.ts build --mode production",
    "test": "jest -c config/jest.config.js",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "coverage": "npm test -- --coverage --reporter=html --watchAll",
    "prepare": "husky install"
  },
  "prettier": {
    "bracketSpacing": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.6.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.50.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^13.2.2",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.62.1",
    "typescript": "^4.9.4",
    "vite": "^4.4.9",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-svgr": "^3.2.0",
    "@libra-foundation/eslint-config-typescript": "^0.0.1"
  },
  "lint-staged": {
    "*.{md,ts,tsx,json,html}": "prettier --write"
  }
}
